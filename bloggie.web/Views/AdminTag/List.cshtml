@model List<bloggie.web.Models.Domain.Tag>
@{
}





<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Show All The Tags - Admin Functionality
        </h1>
    </div>
</div>


<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tags in Model)

                {

                    <tr>
                        <td>@tags.Id</td>
                        <td>@tags.Name</td>
                        <td>@tags.DisplayName</td>
                        <td><a asp-area="" asp-controller="AdminTag" asp-action="Edit" asp-route-id="@tags.Id">Edit</a></td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Tags Found!</p>
    }
</div>